Config { font = "xft:CurriedCN:size=9"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Network "wlp3s0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Wireless "wlp3s0" ["-t", "<essid>"] 50
                    , Run Memory ["-t","Mem: <usedratio>%"] 30 
                    , Run Swap [] 10
                    , Run Com "/home/phil/.mutt/mail_check" [] "mail" 50
                    , Run Date "%a %B %-d %Y %H:%M:%S %p" "date" 10
                    , Run BatteryP ["BAT0"]
                          ["-t", "Batt: <acstatus> <left>%",
                           "-L", "10", "-H", "80", "--high", "green", "--low", "red",
                           "--", "-O", "<fc=green>On</fc>", "-i", "<fc=green>Full</fc>"]
                          50
                    , Run StdinReader
                    , Run MPD ["-t", "<statei> <artist>", "--", "-P", "", "-Z", "", "-S", ""] 10
                    , Run PipeReader "/tmp/.volume-pipe" "vol_pipe"
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %battery% | %memory% | %vol_pipe% %mpd% | Mail: %mail% | %wlp3s0wi% | %date%"
       }
