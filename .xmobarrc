Config { font = "xft:Terminus:size=9,WenQuanYi Zen Hei:size=9,Symbola:size=9"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run Cpu ["-t","<total>%","-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Network "wlp3s0" ["-L","0","-H","32","--normal","green","--high","red"] 300
                    , Run Wireless "wlp3s0" ["-t", "<essid>"] 50
                    , Run Memory ["-t","<usedratio>%"] 30
                    , Run Swap [] 300
                    , Run Com "/home/phil/bin/mail.sh" [] "mail" 50
                    , Run Com "/home/phil/bin/vpn.sh" [] "vpn" 100
                    , Run Date "%a %B %-d %Y %H:%M:%S %p" "date" 10
                    , Run BatteryP ["BAT0"]
                          ["-t", "Batt:<acstatus> <left>%",
                           "-L", "10", "-H", "80", "--high", "green", "--low", "red",
                           "--", "-O", " <fc=green>On</fc>", "-i", " <fc=green>On</fc>", "-o", ""]
                          50
                    , Run StdinReader
                    , Run MPD ["-t", "<statei>", "--", "-P", "▶", "-Z", "⏸", "-S", "⏹"] 10
                    , Run BufferedPipeReader "mpc-vol"
                          [ (0, False, "/tmp/.volume-pipe")
                          , (40, False, "/tmp/.mpc-pipe")
                          ]
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ CM: %cpu% %memory% | %battery% | %mpd% %mpc-vol% | Mail: %mail% | %wlp3s0wi%%vpn% | %date%"
       }
