# commented out push bindings because we've got amethyst

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind l:ctrl;alt       resize +10% +0
bind h:ctrl;alt        resize -10% +0
bind k:ctrl;alt          resize +0   -10%
bind j:ctrl;alt        resize +0   +10%

# My Move
bind l:alt  move windowTopLeftX+(screenSizeX*0.07);windowTopLeftY windowSizeX;windowSizeY
bind h:alt   move windowTopLeftX-(screenSizeX*0.07);windowTopLeftY windowSizeX;windowSizeY
bind k:alt     move windowTopLeftX;windowTopLeftY-(screenSizeY*0.07) windowSizeX;windowSizeY
bind j:alt   move windowTopLeftX;windowTopLeftY+(screenSizeY*0.07) windowSizeX;windowSizeY

# My Center
bind m:alt   move screenOriginX+(screenSizeX*0.03);screenOriginY+(screenSizeY*0.03) screenSizeX*0.92;screenSizeY*0.92
bind n:alt   move screenOriginX+(screenSizeX*0.3);screenOriginY+(screenSizeY*0.3) screenSizeX*0.43;screenSizeY*0.60

